    "version": "0.2.0",
    "configurations": [
        {
            "name": "(Windows) Attach",
            "type": "cppvsdbg",
            "request": "attach",
            "processId": "${command:pickProcess}"
        },

        {
            "name": "(Windows)Launch Standalone",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/standalone/Debug/standalone.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false
        },
        {
            "name": "(Mac)Launch Standalone",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/standalone/standalone",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "lldb"
        }
    ]
}